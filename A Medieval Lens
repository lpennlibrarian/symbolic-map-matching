<script>
// Five map targets and five matching photo references
const MAPS = [
"https://drive.google.com/uc?export=view&id=1JRngUAUVHe0sce58QPphM7ycKs4klyFt",
"https://drive.google.com/uc?export=view&id=1kZUXaG_w0rbjDdrO-WKtxqBAJmfrfQWs",
"https://drive.google.com/uc?export=view&id=1qzvOO58GlJ75X9Z1o_ZtTzunl4jh8IPP",
"https://drive.google.com/uc?export=view&id=1sc1904nmgseaT3-BL6JvGiyKwZIPr3yJ",
"https://drive.google.com/uc?export=view&id=1bAAWQGfSX1uVYAEIrN3mAOdJWSdCTxrQ"
];
const PHOTOS = [
"https://drive.google.com/uc?export=view&id=1q16l0FpGCkQCwflhNMpPqSzYUs1hpTXB",
"https://drive.google.com/uc?export=view&id=1MsPoBWAMJXG92ON1NluwJXn2R4WthojE",
"https://drive.google.com/uc?export=view&id=15O2ElcRYiuHB43zM6oAvyWkKQPztscYV",
"https://drive.google.com/uc?export=view&id=1ynGU8NcBsejHdVNMmGwPb3vQ5iCZPtlW",
"https://drive.google.com/uc?export=view&id=11hDlkCO6Qsra65nHe7e-reO-vEutOlnN"
];

Copy
const zonesEl = document.getElementById('zones');  
const poolEl = document.getElementById('pool');  
const movesEl = document.getElementById('moves');  
const matchesEl = document.getElementById('matches');  
const liveEl = document.getElementById('live');  
const endMsgEl = document.getElementById('endmessage');  

let moves = 0;  
let matches = 0;  
let gameComplete = false;  

function shuffle(arr) {  
  const a = arr.slice();  
  for (let i = a.length - 1; i &gt; 0; i--) {  
    const j = Math.floor(Math.random() * (i + 1));  
    [a[i], a[j]] = [a[j], a[i]];  
  }  
  return a;  
}  

function renderGame() {  
  // Build drop zones with map images  
  zonesEl.innerHTML = '';  
  for (let i = 0; i &lt; MAPS.length; ++i) {  
    const z = document.createElement('div');  
    z.className = 'zone';  
    z.dataset.zone = i;  
    z.tabIndex = 0;  
    z.innerHTML = \`<img src alt="Map location \${i+1}"><span>Drop the matching photo</span>\`;  
    zonesEl.appendChild(z);  

    z.addEventListener('dragover', e =&gt; { if (!gameComplete) { e.preventDefault(); z.classList.add('dragover'); }});  
    z.addEventListener('dragleave', () =&gt; z.classList.remove('dragover'));  
    z.addEventListener('drop', e =&gt; {  
      if (gameComplete) return;  
      z.classList.remove('dragover');  
      if (z.classList.contains('matched')) return;  
      const draggedIdx = parseInt(e.dataTransfer.getData('photo-idx'));  
      processDrop(i, draggedIdx, z);  
    });  

    // Prevent scrolling while touching a zone  
    z.addEventListener('touchmove', e =&gt; e.preventDefault(), { passive: false });  
  }  

  // Build shuffled photo pool  
  poolEl.innerHTML = '';  
  const shuffled = shuffle(PHOTOS.map((src, idx) =&gt; ({src, idx})));  
  for (let {src, idx} of shuffled) {  
    const img = document.createElement('img');  
    img.src = src;  
    img.alt = "Photo reference " + (idx + 1);  
    img.className = 'drop-img';  
    img.draggable = true;  
    img.dataset.photoIdx = idx;  
    img.tabIndex = 0;  

    img.addEventListener('dragstart', e =&gt; {  
      if (gameComplete) { e.preventDefault(); return; }  
      e.dataTransfer.effectAllowed = 'move';  
      e.dataTransfer.setData('photo-idx', idx);  
      setTimeout(() =&gt; img.classList.add('dragging'), 0);  
    });  
    img.addEventListener('dragend', () =&gt; img.classList.remove('dragging'));  

    // Touch support  
    img.addEventListener('touchstart', () =&gt; { if (!gameComplete) img.classList.add('dragging'); });  
    img.addEventListener('touchend', e =&gt; {  
      img.classList.remove('dragging');  
      if (gameComplete) return;  
      const touch = e.changedTouches[0];  
      let el = document.elementFromPoint(touch.clientX, touch.clientY);  
      while (el && !el.classList?.contains('zone') && el !== document.body) el = el.parentNode;  
      if (el && el.classList.contains('zone') && !el.classList.contains('matched')) {  
        const zoneIdx = parseInt(el.dataset.zone);  
        processDrop(zoneIdx, idx, el);  
      }  
    });  

    poolEl.appendChild(img);  
  }  

  updateStats();  
  announce("Start the game. Drag a photo to its matching map.");  
}  

function processDrop(zoneIdx, photoIdx, zoneEl) {  
  if (gameComplete || zoneEl.classList.contains('matched')) return;  
  moves += 1;  

  if (zoneIdx === photoIdx) {  
    matches += 1;  
    zoneEl.classList.add('matched');  

    // Hide from pool and clone into zone  
    const poolImg = [...poolEl.querySelectorAll('.drop-img')].find(im =&gt; parseInt(im.dataset.photoIdx) === photoIdx);  
    if (poolImg) {  
      poolImg.style.display = "none";  
      const clone = poolImg.cloneNode(true);  
      clone.draggable = false;  
      clone.style.marginLeft = "6px";  
      clone.style.opacity = "1";  
      clone.classList.remove('dragging');  
      clone.tabIndex = -1;  
      zoneEl.appendChild(clone);  
    }  

    announce("Correct match.");  
    updateStats();  

    if (matches === MAPS.length) {  
      gameComplete = true;  
      announce("All matches found.");  
      setTimeout(showCompleteMessage, 350);  
    }  
  } else {  
    announce("Try again. That's not the correct photo for this map.");  
    updateStats();  
  }  
}  

function updateStats() {  
  movesEl.textContent = "Moves: " + moves;  
  matchesEl.textContent = "Matches: " + matches;  
}  

function announce(txt) { liveEl.textContent = txt; }  

function showCompleteMessage() {  
  endMsgEl.innerHTML = '<div>ðŸŽ‰ Thank you for playing Symbolic Map Matching!<br>All locations have been matched.<br><br>Consider the items in the Tâ€‘O maps and their placement, as compared to the photo references you matched. What differences or similarities did you notice?</div>';  
}  

renderGame();  
</script>
</body>
